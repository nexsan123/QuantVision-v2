{
  "$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",
  "appId": "com.quantvision.desktop",
  "productName": "QuantVision",
  "copyright": "Copyright Â© 2024 QuantVision",
  "directories": {
    "output": "release",
    "buildResources": "electron/assets"
  },
  "files": [
    "dist/**/*",
    "electron/**/*",
    "!electron/assets/raw/**"
  ],
  "extraMetadata": {
    "main": "electron/main.cjs"
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "icon": "electron/assets/icon.ico",
    "artifactName": "${productName}-${version}-${arch}.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "installerIcon": "electron/assets/icon.ico",
    "uninstallerIcon": "electron/assets/icon.ico",
    "installerHeaderIcon": "electron/assets/icon.ico",
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "QuantVision",
    "include": "electron/installer.nsh"
  },
  "mac": {
    "target": ["dmg", "zip"],
    "icon": "electron/assets/icon.icns",
    "category": "public.app-category.finance",
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "entitlements": "electron/entitlements.mac.plist",
    "entitlementsInherit": "electron/entitlements.mac.plist"
  },
  "linux": {
    "target": ["AppImage", "deb"],
    "icon": "electron/assets/icons",
    "category": "Finance"
  },
  "publish": {
    "provider": "github",
    "owner": "your-github-username",
    "repo": "quantvision"
  }
}
